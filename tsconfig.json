{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2019", "dom"],
        "types": ["reflect-metadata", "jest", "node"],
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
          "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ]
  }